{% if settings.sidebar_linklist_1.title != "" and linklists[settings.sidebar_linklist_1].links.size > 0 %}
<nav>
  <span class="heading">{{ linklists[settings.sidebar_linklist_1].title }}</span>
  <ul>
    {% for link in linklists[settings.sidebar_linklist_1].links %}
    <li><a href="{{ link.url }}"{% if link.url == active_url %} class="current"{% endif %}{% if template == 'article' and link.url == blog.url %} class="current"{% endif %}>{{ link.title }}</a></li>
    {% endfor %}
  </ul>
</nav>
{% endif %}
