<div id="index" class="clearfix">

  <div class="slider-container">
    <ul id="slider" class="slider">
      <li class="slide"><img src="{{ 'slideshow_1.jpg' | asset_url }}" data-url="{{ settings.image_1_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow_2.jpg' | asset_url }}" data-url="{{ settings.image_2_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow_3.jpg' | asset_url }}" data-url="{{ settings.image_3_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow_4.jpg' | asset_url }}" data-url="{{ settings.image_4_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow_5.jpg' | asset_url }}" data-url="{{ settings.image_5_link }}" class="slide-img" /></li>
      
      <li class="slide"><img src="{{ 'slideshow_6.jpg' | asset_url }}" data-url="{{ settings.image_6_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow_7.jpg' | asset_url }}" data-url="{{ settings.image_7_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow_8.jpg' | asset_url }}" data-url="{{ settings.image_8_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow_9.jpg' | asset_url }}" data-url="{{ settings.image_9_link }}" class="slide-img" /></li>
      <li class="slide"><img src="{{ 'slideshow_10.jpg' | asset_url }}" data-url="{{ settings.image_10_link }}" class="slide-img" /></li>
    </ul>
    <div id="slider-empty" style="display:none; background:#f0f0f0; padding:120px 0; text-align:center;">
      <h4>Slider is empty</h4>
      If you are the shop owner, <a href="/admin/themes/current/settings">click here</a> to upload images to this slideshow.
    </div>
  </div>

  <h2>{{ settings.tr_featured_items }}</h2>

  <div id="collection" class="clearfix">
    {% for product in collections[settings.frontpage_collection].products limit:8 %}
    {% include 'product-loop' with settings.frontpage_collection %}
    {% endfor %}
  </div>
  
  {% if settings.index_page_content != empty %}
  <div class="index-page">
    <h3>{{ pages[settings.index_page_content].title }}</h3>
    <div class="page-content">
      {{ pages[settings.index_page_content].content }}
    </div>
  </div>
  {% endif %}

</div> <!-- /#index -->

