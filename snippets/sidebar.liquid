{% if settings.show_articles %}
<nav>
  <span class="heading">{{ settings.tr_recent_articles }}</span>
  <ul>
    {% for article in blogs[settings.sidebar_blog].articles limit:6 %}
    <li><a href="{{ article.url }}"{% if article.url == active_url %} class="current"{% endif %}>{{ article.title }}</a></li>
    {% endfor %}
  </ul>
</nav>
{% endif %}
{% if settings.show_about_us %}
<nav>
  <span class="heading">{{ settings.tr_about_us }}</span>
  <div>
    {{ pages.about-us.content | strip_html | truncatewords: 50 }} <a href="{{ pages.about-us.url }}">Read more</a>
  </div>
</nav>
{% endif %}